<% include ./partials/header %>
    <div class="row">
        <h1 style="text-align: center">Sign Up</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/add/employee/register" method="post">
                <div class="form-group">
                    <input class="form-control" type="email" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">

                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="adminCode" placeholder="Admin code" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
            </form>
            <a  href="/add/employee/login">Login</a>
        </div>
    </div>
