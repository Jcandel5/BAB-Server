<% include ../partials/header %>



<div class="container">
    <div class="row">
      <h1 style="text-align:center">Edit <%=employee.name%></h1>
      <div style="width: 40%; margin: 25px auto">
        <form  action="/api/employee/admin/<%=employee._id%>?_method=PUT" method="post">
          <div class="form-group">
              <input class="form-control" type="text" name="employee[name]" autofocus value="<%=employee.name%>">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="employee[title]" value="<%= employee.title %>" >
          </div>
          <div class="form-group">
          <textarea
           class='form-control'
           name="employee[desc]"
           rows="6"
           cols="80"
         >
         <%=employee.desc%>
         </textarea>
       </div>

          <div class="form-group">
            <button class="btn btn-lg btn-default btn-block btn-primary"> Submit! </button>
          </div>
        </form>
        <a href="/api/employee/admin">Go Back</a>
    </div>
  </div>
</div>
